<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.RegisterMenuController">
   <children>
      <TextField fx:id="nameField" layoutX="219.0" layoutY="130.0" promptText="Name" />
      <TextField fx:id="surnameField" layoutX="219.0" layoutY="173.0" promptText="Surname" />
      <TextField fx:id="loginField" layoutX="219.0" layoutY="214.0" promptText="Login" />
      <CheckBox fx:id="logInCheckBox" layoutX="394.0" layoutY="260.0" mnemonicParsing="false" text="Log in" />
      <Button fx:id="signInButton" layoutX="270.0" layoutY="308.0" mnemonicParsing="false" onAction="#signIn" text="Sign in" />
      <Label layoutY="54.0" prefHeight="20.0" prefWidth="600.0" text="Library Register Page" />
      <ImageView fx:id="backwardArrowImage" fitHeight="41.0" fitWidth="27.0" layoutX="80.0" layoutY="301.0" onMouseClicked="#switchToLoginMenu" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@pictures/backward_arrow.png" />
         </image>
      </ImageView>
      <Label layoutX="19.0" layoutY="264.0" prefHeight="28.0" prefWidth="149.0" text="Back to the login menu" />
      <PasswordField fx:id="passwordField" layoutX="219.0" layoutY="256.0" promptText="Password" />
   </children>
